<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Group"
        android:textSize="40sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/group_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_profile"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textview_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_name_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="Online/Offline"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_below="@id/textview_preference"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_below="@id/game"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/group_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/textview_profile"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/pref"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/group_name"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/game_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/pref"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:padding="10dp" />
    <EditText
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/game_edit"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:padding="10dp" />


    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="148dp"
        android:onClick="createGroupRoutine"
        android:text="Create" />


</RelativeLayout>